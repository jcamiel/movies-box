{
  "name": "movies-box",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "npm run clean && npx tsc && npm run copy-files",
    "clean": "rimraf dist/",
    "copy-files": "copyfiles -u 1 src/**/*.css src/bin/www src/**/*.hbs src/**/*.json dist/",
    "start": "node dist/bin/www"
  },
  "dependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^18.7.8",
    "cookie-parser": "~1.4.4",
    "debug": "~4.3.4",
    "express": "~4.18.1",
    "hbs": "^4.2.0",
    "http-errors": "~2.0.0",
    "morgan": "~1.10.0",
    "typescript": "^4.7.4"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "rimraf": "^3.0.2"
  }
}
